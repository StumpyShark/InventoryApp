<Window x:Class="InventoryApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="txtUsername" Width="200" Margin="5" 
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="5"/>
            <Button Content="Войти" Width="100" Margin="5"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=txtPassword}"/>
        </StackPanel>
    </Grid>
</Window>